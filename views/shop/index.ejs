<%- include('../includes/start.ejs') %>

    <link rel="stylesheet" href="/main/admin.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <!-- <h1>My Products</h1>
        <p>List of all the products...</p>  -->
        <% if(prods.length>0){ %>
            <div class="grid">
                <% for(let product of prods){ %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= product.title %> </h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.imageUrl %>" alt="A Book" class=" changeSize">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/product/<%= product._id %>" class="btn">Detail</a> 
                            <% if(isAuthenticated){ %>
                            <%- include('../includes/add-to-cart.ejs', {prods:product}) %>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
            <%- include('../includes/pagination.ejs' , {currPage : currPage , hasNextPage : hasNextPage , hasPrevPage : hasPrevPage , nextPage : nextPage , prevPage : prevPage , lastPage : lastPage}) %>

        <% } else { %>
            <h1>No items are added</h1>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>